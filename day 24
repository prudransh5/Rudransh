#include <stdio.h>

int main() {
    int T;
    scanf("%d", &T);
    
    while (T--) {
        int N, X, Y, totalMarks, maxMarks;
        scanf("%d %d %d %d", &N, &X, &Y, &totalMarks);
        
        maxMarks = N * X;
        if (totalMarks <= maxMarks && totalMarks >= Y * X) {
            printf("YES\n");
        } else {
            printf("NO\n");
        }
    }
    
    return 0;
}
